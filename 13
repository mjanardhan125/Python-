def add(x, y): return x + y
def subtract(x, y): return x - y
def multiply(x, y): return x * y
def divide(x, y): return x / y if y != 0 else "Cannot divide by zero"

while True:
    print("\nOptions: add, subtract, multiply, divide, exit")
    choice = input("Choose operation: ").lower()
    if choice == "exit": break
    a = float(input("Enter first number: "))
    b = float(input("Enter second number: "))
    if choice == "add": print("Result:", add(a, b))
    elif choice == "subtract": print("Result:", subtract(a, b))
    elif choice == "multiply": print("Result:", multiply(a, b))
    elif choice == "divide": print("Result:", divide(a, b))
    else: print("Invalid choice")
